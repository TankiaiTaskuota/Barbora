<% img_class = "text-orange-500 bg-white rounded-full dark:bg-gray-800" %>
<div class="flex items-center p-4 bg-white rounded-lg shadow-xs dark:bg-gray-800">
  <% if defined?(card_img) %>
    <% img_class = "text-orange-500 bg-orange-100 rounded-full dark:text-orange-100 dark:bg-orange-500" %>
  <% end %>
  <div class="p-3 mr-4 <%= img_class %>">
    <%= card_img if defined?(card_img) %>
  </div>

  <div>
    <p class="mb-2 text-sm font-medium text-gray-600 dark:text-gray-400">
      <%= card_name %>
    </p>
    <p class="text-lg font-semibold text-gray-700 dark:text-gray-200">
      <%= card_text %>
    </p>
  </div>
</div>
