<h2 class="my-6 text-2xl font-semibold text-gray-700 dark:text-gray-200">
  Products
</h2>

<%= link_to "New", new_product_path %>

<div class="grid gap-6 mb-8 md:grid-cols-2 xl:grid-cols-4">
  <div id="area-example"></div>
</div>

<div class="w-full mb-8 overflow-hidden rounded-lg shadow-xs">
  <div class="w-full overflow-x-auto">
    <table class="w-full whitespace-no-wrap">
      <thead>
        <tr class="text-xs font-semibold tracking-wide text-left text-gray-500 uppercase border-b dark:border-gray-700 bg-gray-50 dark:text-gray-400 dark:bg-gray-800">
          <th class="px-4 py-3">ID</th>
          <th class="px-4 py-3">name</th>
          <th class="px-4 py-3">ean</th>
          <th class="px-4 py-3">type_id</th>
          <th class="px-4 py-3">created_at</th>
          <th class="px-4 py-3">items</th>
          <th class="px-4 py-3">Actions</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y dark:divide-gray-700 dark:bg-gray-800">
        <% @products.each do |product| %>
          <tr class="text-gray-700 dark:text-gray-400">
            <td class="px-4 py-3 text-sm"><%= link_to product.id, product_path(product) %></td>
            <td class="px-4 py-3 text-sm"<%=  product.name %></td>
            <td class="px-4 py-3 text-sm"><%= product.ean %></td>
            <td class="px-4 py-3 text-sm"><%= product.type_id %></td>
            <td class="px-4 py-3 text-sm"><%= product.created_at %></td>
            <td class="px-4 py-3 text-sm"><%= link_to product.items.count, items_path(:product_id=>product.id) %></td>
            <td class="px-4 py-3 text-sm">
              <div class="flex items-center space-x-4 text-sm">
                <%= link_to "Edit",
                            edit_product_path(product), :class => "flex items-center justify-between px-2 py-2 text-sm font-medium leading-5 text-purple-600 rounded-lg dark:text-gray-400 focus:outline-none focus:shadow-outline-gray" %>

                            <%= link_to "Destroy",
                                        product_path(product),
                                        :method => :delete,
                                        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                                        :class => "flex items-center justify-between px-2 py-2 text-sm font-medium leading-5 text-purple-600 rounded-lg dark:text-gray-400 focus:outline-none focus:shadow-outline-gray" %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
