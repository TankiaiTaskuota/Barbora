<%= form_for @product do |f| %>
  <label class="block text-sm">
    <span class="text-gray-700 dark:text-gray-400">name</span>
    <div class="flex items-center rounded-md bg-white pl-3 outline-1 -outline-offset-1 outline-gray-300 ">
      <%= f.text_field :name, class: "block min-w-0 grow py-1.5 pr-3 pl-1 text-base text-gray-900 placeholder:text-gray-400 focus:outline-none sm:text-sm/6" , placeholder: "EUR" %>
    </div>
  </label>
  <label class="block text-sm">
    <span class="text-gray-700 dark:text-gray-400">ean</span>
    <div class="flex items-center rounded-md bg-white pl-3 outline-1 -outline-offset-1 outline-gray-300 ">
      <%= f.text_field :ean, class: "block min-w-0 grow py-1.5 pr-3 pl-1 text-base text-gray-900 placeholder:text-gray-400 focus:outline-none sm:text-sm/6" , placeholder: "EUR" %>
    </div>
  </label>
  <label class="block text-sm">
    <span class="text-gray-700 dark:text-gray-400">type_id</span>
    <div class="flex items-center rounded-md bg-white pl-3 outline-1 -outline-offset-1 outline-gray-300 ">
      <%= f.text_field :type_id, class: "block min-w-0 grow py-1.5 pr-3 pl-1 text-base text-gray-900 placeholder:text-gray-400 focus:outline-none sm:text-sm/6" , placeholder: "EUR" %>
    </div>
  </label>
  <label class="block text-sm">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
              products_path, :class => 'btn btn-default' %>
  </label>
<% end %>
